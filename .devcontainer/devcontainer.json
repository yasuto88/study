{
  "name": "realsense-dev",
  "workspaceFolder": "/workspaces/study",
  // ★ Featuresは使わず、下の Dockerfile を使う
  "build": {
    "dockerfile": ".devcontainer/Dockerfile",
    "context": "..",
    "args": {
      // 日本向けにミラー切替したい場合などに使う
      "UBUNTU_MIRROR": "http://archive.ubuntu.com/ubuntu"
    }
  },
  // ★ USB受け渡し
  "runArgs": ["--device=/dev/bus/usb:/dev/bus/usb"],
  // ★ 起動後は venv 有効化の一言だけ（必要なら）
  "postStartCommand": "echo 'source realsense/rsenv311/bin/activate' >> ~/.bashrc",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-toolsai.jupyter"]
    }
  }
}
